@model WebApplication7.Dbopeartions.EmpFileDetails
@{
    /**/

    Layout = null;
}

@using (Html.BeginForm("StoreOrEdit1", "Details", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        @Html.LabelFor(model => model.EmpId, new { @class = "control-label" })
        @Html.EditorFor(model => model.EmpId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EmpId)
    </div>

    <div class="form-group">
        @Html.Label("Select Emirates ID", new { @class = "control-label" })
        <input type="file" name="file" id="file" />

    </div>
    <div class="form-group">
        @Html.Label("Select Passport File", new { @class = "control-label" })
        <input type="file" name="file1" id="file1" />

    </div>
    <div class="form-group">
        @Html.Label("Select Degree Certificate", new { @class = "control-label" })
        <input type="file" name="file2" id="file2" />

    </div>
    <div class="form-group">
        @Html.Label("Select Resume ", new { @class = "control-label" })
        <input type="file" name="file3" id="file3" />

    </div>

    <div class="form-group">

        <input type="submit" id="btnsubmit" value="Submit" class="btn btn-success" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
}  